<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/localphoto_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_texture"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="mobi.imuse.avatar.LocalPhotoActivity"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        >

        <RelativeLayout
            android:id="@+id/layout_title_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:padding="0.0px"
            >

            <!-- 标题文字; -->
            <TextView
                android:id="@+id/tvTitleName"
                style="@style/TitleText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="88dip"
                android:layout_marginRight="88dip"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/icons"
                tools:text="标题文字"
                />

            <!-- 左箭头 -->
            <TextView
                android:id="@+id/tvTitleArrowBtnLeft"
                style="@style/TitleBtn"
                android:layout_width="wrap_content"
                android:layout_height="36.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8.0dip"
                android:background="@drawable/top_back_left_selector"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxWidth="88.0dip"
                android:minWidth="55.0dip"
                android:singleLine="true"
                android:textColor="@color/icons"
                android:text="@null"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tvTitleBtnRightButton"
                style="@style/TitleBtn"
                android:layout_width="wrap_content"
                android:layout_height="36.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8.0dip"
                android:background="@drawable/top_button_right_selector"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxWidth="88.0dip"
                android:minWidth="52.0dip"
                android:singleLine="true"
                android:textColor="@color/icons"
                android:text="@null"
                android:visibility="gone"
                />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    </FrameLayout>
</LinearLayout>