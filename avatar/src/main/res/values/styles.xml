<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <!-- Actionbar color -->
        <item name="colorPrimary">@color/primary</item>
        <!--Status bar color-->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/background_material_light</item>
        <!--Text Color-->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <!--Accent Color-->
        <!--<item name="android:colorAccent">@color/accent</item>-->
        <!--编辑模式ActionMode时选中文字的弹出菜单覆盖ToolBar;-->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="B3_Font_white">
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:textColor">@color/skin_black_item</item>
    </style>
    
    <style name="B4_Font_white">
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:textColor">@color/skin_dark_gray_item</item>
    </style>

    <style name="C8_Font_white">
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:textColor">@color/skin_blue_item</item>
    </style>
    
    <style name="TitleText">
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textColor">@color/skin_bar_text</item>
    </style>
    <style name="TitleBtn">
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textColor">@color/skin_bar_btn</item>
    </style>    
    <style name="SmallButtonBlue" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:textColor">@color/skin_color_button_blue</item>
        <item name="android:background">@drawable/common_btn_small_blue</item>
        <item name="android:paddingLeft">11.0dip</item>
        <item name="android:paddingRight">11.0dip</item>
        <item name="android:minWidth">47.0dip</item>
        <item name="android:minHeight">30.0dip</item>
    </style>
    <style name="custom_alertdialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/custom_alertdialog_transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">#00000000</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
