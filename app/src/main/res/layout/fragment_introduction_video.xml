<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rlSurfaceView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary"
                tools:context="mobi.imuse.lovesports.fragment.IntroductionVideoFragment"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        >

        <com.skd.androidrecording.video.AdaptiveSurfaceView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|top"
            />

        <TextView
            android:id="@+id/tvRecordingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_gravity="top"
            android:gravity="center"
            android:text="01:00"
            android:textColor="@color/md_red_A700"
            />
        <LinearLayout
            android:id="@+id/controlsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_black_1000"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:padding="8dp"
            >

            <Button
                android:id="@+id/btnFlash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:text="auto"
                android:textColor="@color/md_white_1000"
                android:alpha="0.3"
                />

            <Button
                android:id="@+id/btnRecord"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="0.6"
                android:background="@android:color/transparent"
                android:textColor="@color/md_white_1000"
                android:text="Start Record"
                android:alpha="0.3"
                />

            <ImageButton
                android:id="@+id/btnSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:src="@drawable/ic_switch_camera"
                android:alpha="0.2"
                />

        </LinearLayout>
    </FrameLayout>


</RelativeLayout>
