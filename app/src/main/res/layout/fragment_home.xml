<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="mobi.imuse.lovesports.fragment.HomeFragment"
    >

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/imageSlider"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        />


    <LinearLayout
        android:id="@+id/llFunctionsCircle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_box"
        android:layout_below="@id/imageSlider"
        android:divider="@drawable/divider_horizon"
        android:orientation="horizontal"
        android:showDividers="middle"
        >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_padding"
            android:paddingBottom="@dimen/activity_padding"
            >

            <TextView
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_revenue"
                android:gravity="center"
                android:textColor="@color/icons"
                tools:text="0.00"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/activity_padding"
                android:text="我的收入(元)"
                android:textColor="@color/primary_text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_padding"
            android:paddingBottom="@dimen/activity_padding"
            >

            <TextView
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_evaluation"
                android:gravity="center"
                android:textColor="@color/icons"
                tools:text="4.5"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/activity_padding"
                android:text="用户评价"
                android:textColor="@color/primary_text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_padding"
            android:paddingBottom="@dimen/activity_padding"
            >

            <TextView
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_free_consultation"
                android:gravity="center"
                android:textColor="@color/icons"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/activity_padding"
                android:text="免费咨询"
                android:textColor="@color/primary_text"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
